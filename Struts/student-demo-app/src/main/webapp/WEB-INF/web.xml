<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>welcome-gradle</display-name>
	<welcome-file-list>
		<welcome-file>home</welcome-file>
	</welcome-file-list>
	<filter>
		<description>
		</description>
		<display-name>getStudent</display-name>
		<filter-name>getStudent</filter-name>
		<filter-class>com.techlab.filter.getStudent</filter-class>
	</filter>
	<filter>
		<description>
		</description>
		<display-name>SetStudent</display-name>
		<filter-name>SetStudent</filter-name>
		<filter-class>com.techlab.filter.SetStudent</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>getStudent</filter-name>
		<url-pattern>/edit</url-pattern>
		<url-pattern>/deleteCtrl</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SetStudent</filter-name>
		<url-pattern>/addCtrl</url-pattern>
		<url-pattern>/editCtrl</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>com.techlab.controller.DisplayController</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>EditController</display-name>
		<servlet-name>EditController</servlet-name>
		<servlet-class>com.techlab.controller.EditController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditController</servlet-name>
		<url-pattern>/editCtrl</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Edit</servlet-name>
		<jsp-file>/edit.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>Add</servlet-name>
		<jsp-file>/add.jsp</jsp-file>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>DeleteController</display-name>
		<servlet-name>DeleteController</servlet-name>
		<servlet-class>com.techlab.controller.DeleteController</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>AddController</display-name>
		<servlet-name>AddController</servlet-name>
		<servlet-class>com.techlab.controller.AddController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Edit</servlet-name>
		<url-pattern>/edit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Add</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteController</servlet-name>
		<url-pattern>/deleteCtrl</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddController</servlet-name>
		<url-pattern>/addCtrl</url-pattern>
	</servlet-mapping>

</web-app>